<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="395dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:background="@color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/publication_shape"
            android:paddingRight="32dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/ic_dialog_info"
                    android:paddingTop="12dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="#nomedousuario"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        />

                    <TextView
                        android:id="@+id/tv_date_publication"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="xx de xxxxx de 202x"
                        android:textSize="10sp"
                        android:paddingLeft="12dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_text_publication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="bskda blksdhas blkdfhkashf bkhsldjh bkslkdjas nolhsdkj bgkjsdhkjhjsd bkfchsfsladj blkjhdslkj hgdg🚐🚐🚑🏍️🏍️🥯🥐🥞🥚🥐🥖"
                android:justificationMode="inter_word"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/tv_localization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="em localização"
                android:justificationMode="inter_word"
                android:paddingHorizontal="16dp"
                android:textSize="12dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:scrollbars="none"
                android:orientation="vertical"
                />
            <TextView
                android:id="@+id/tv_marked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="em localização"
                android:justificationMode="inter_word"
                android:paddingHorizontal="16dp"
                android:paddingBottom="10dp"
                android:textSize="12dp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>