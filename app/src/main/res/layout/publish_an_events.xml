<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="348dp"
        android:layout_height="618dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/TV_Username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Nome do usauario" />
        </LinearLayout>

        <EditText
            android:id="@+id/TV_text_publication_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:ems="10"
            android:inputType="text"
            android:text="Titulo do evento" />

        <TextView
            android:id="@+id/TV_text_capa_do_evento"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Adicionar Capa do Evento" />

        <TextView
            android:id="@+id/TV_text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição do Evento" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/img_one"
                android:layout_width="165dp"
                android:layout_height="103dp"
                android:layout_marginEnd="2dp"
            tools:srcCompat="@drawable/img_roxo" />

            <ImageView
                android:id="@+id/img_two"
                android:layout_width="165dp"
                android:layout_height="103dp"
                android:layout_marginStart="2dp"
            tools:srcCompat="@drawable/img_roxo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_three"
                android:layout_width="165dp"
                android:layout_height="103dp"
                android:layout_marginEnd="2dp"
            tools:srcCompat="@drawable/img_roxo" />

            <ImageView
                android:id="@+id/img_four"
                android:layout_width="165dp"
                android:layout_height="103dp"
                android:layout_marginStart="2dp"
            tools:srcCompat="@drawable/img_roxo" />
        </LinearLayout>


        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:ems="10"
            android:inputType="date"
            android:hint="Data inicial"/>

        <EditText
            android:id="@+id/editTextDate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:ems="10"
            android:inputType="date"
            android:hint="Data final"/>

        <TextView
            android:id="@+id/TV_localização"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar Localização" />

        <Button
            android:id="@+id/BTN_publish_an_events"
            android:layout_width="187dp"
            android:layout_height="47dp"
            android:text="Publicar"
            android:layout_gravity="center"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>